{{#if showAll}}
  <button {{action 'showAll'}}>Show All</button>
{{/if}}
{{#list-filter
   filter=(action 'filterByCity')
   as |rentals|}}
{{/list-filter}}
<ul>
  {{#each model as |book|}}
    {{book-cover book=book blurBackground=(route-action "blurBackground")}}
  {{/each}}

  {{infinity-loader infinityModel=model}}
  {{!page-numbers content=content}}
</ul>

